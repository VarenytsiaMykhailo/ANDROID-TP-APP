<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/PlacesListFragment__CardView_MainPicRoot"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/PlacesListFragment__ImageView_MainPic"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/PlacesListFragment__ImageView_LikeBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="4dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/PlacesListFragment__CardView_MainPicRoot"
        app:layout_constraintTop_toTopOf="@+id/PlacesListFragment__CardView_MainPicRoot"
        app:srcCompat="@drawable/like_background" />

    <ImageView
        android:id="@+id/PlacesListFragment__ImageView_Like"
        android:layout_width="24dp"
        android:layout_height="21.2dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/PlacesListFragment__ImageView_LikeBack"
        app:layout_constraintEnd_toEndOf="@+id/PlacesListFragment__ImageView_LikeBack"
        app:layout_constraintStart_toStartOf="@+id/PlacesListFragment__ImageView_LikeBack"
        app:layout_constraintTop_toTopOf="@+id/PlacesListFragment__ImageView_LikeBack"
        app:srcCompat="@drawable/like_unliked" />

    <TextView
        android:id="@+id/PlacesListFragment__TextView_NameWhite"
        android:layout_width="308dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/PlacesListFragment__CardView_MainPicRoot"
        app:layout_constraintStart_toStartOf="@+id/PlacesListFragment__CardView_MainPicRoot"
        tools:text="Looool" />

    <TextView
        android:id="@+id/PlacesListFragment__TextView_RateWhite"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/PlacesListFragment__CardView_MainPicRoot"
        app:layout_constraintEnd_toEndOf="@+id/PlacesListFragment__CardView_MainPicRoot"
        tools:text="4.8" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/PlacesListFragment__ConstraintLayout_ExpandableInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/PlacesListFragment__CardView_MainPicRoot">

        <androidx.cardview.widget.CardView
            android:id="@+id/PlacesListFragment__CardView_Pic1Root"
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/PlacesListFragment__ImageView_Pic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PlacesListFragment__CardView_Pic2Root"
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toStartOf="@id/PlacesListFragment__CardView_Pic3Root"
            app:layout_constraintStart_toEndOf="@id/PlacesListFragment__CardView_Pic1Root"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/PlacesListFragment__ImageView_Pic2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PlacesListFragment__CardView_Pic3Root"
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/PlacesListFragment__ImageView_Pic3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/PlacesListFragment__TextView_Name"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PlacesListFragment__CardView_Pic1Root"
            tools:text="Looool" />

        <RatingBar
            android:id="@+id/PlacesListFragment__RatingBar_StarsRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:progressBackgroundTint="@color/gray"
            android:progressTint="@color/stars_rating"
            android:rating="0.0"
            android:scaleX=".5"
            android:scaleY=".5"
            android:secondaryProgressTint="@color/stars_rating"
            android:stepSize="0.1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PlacesListFragment__TextView_Name" />

        <TextView
            android:id="@+id/PlacesListFragment__TextView_Rate"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_marginStart="132dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/PlacesListFragment__RatingBar_StarsRate"
            app:layout_constraintTop_toTopOf="@+id/PlacesListFragment__RatingBar_StarsRate"
            tools:text="4.8" />

        <TextView
            android:id="@+id/PlacesListFragment__TextView_RateCount"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/PlacesListFragment__TextView_Rate"
            app:layout_constraintTop_toTopOf="@+id/PlacesListFragment__RatingBar_StarsRate"
            tools:text="1488" />

        <TextView
            android:id="@+id/PlacesListFragment__TextView_RateCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"
            android:text=" оценок"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/PlacesListFragment__TextView_RateCount"
            app:layout_constraintTop_toTopOf="@+id/PlacesListFragment__RatingBar_StarsRate" />

        <TextView
            android:id="@+id/PlacesListFragment__TextView_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/PlacesListFragment__RatingBar_StarsRate"
            app:layout_constraintTop_toTopOf="@+id/PlacesListFragment__RatingBar_StarsRate"
            tools:text="Прикол за приколом..." />

        <TextView
            android:id="@+id/PlacesListFragment__TextView_TimeCloseTxt"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Открыто до "
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/PlacesListFragment__TextView_TimeClose"

            app:layout_constraintTop_toBottomOf="@+id/PlacesListFragment__TextView_Description" />

        <TextView
            android:id="@+id/PlacesListFragment__TextView_TimeClose"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="21:00"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/PlacesListFragment__TextView_TimeCloseTxt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>